#include <iostream>
using namespace std;

void staircase(int n) {
    for (int i = 1; i <= n; i++) {
        // Print spaces followed by '#' symbols
        for (int j = 0; j < n - i; j++) {
            cout << " "; // Print spaces
        }
        for (int k = 0; k < i; k++) {
            cout << "#"; // Print '#'
        }
        cout << endl; // Move to the next line
    }
}

int main() {
    int n; // Size of the staircase
    cin >> n; // Read the size of the staircase
    staircase(n); // Call the staircase function
    return 0;
}
